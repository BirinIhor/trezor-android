<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button"
    style="@style/ButtonAppTheme.Borderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/line_height_large"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/form_hor_padding"
    android:paddingRight="@dimen/form_hor_padding"
    android:paddingTop="@dimen/form_vert_padding_small"
    android:paddingBottom="@dimen/form_vert_padding_small"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_primary_selector"
        android:textSize="@dimen/text_subhead"
        android:text="PIN protection"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_compat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:clickable="false"
        android:focusable="false"
        />


</LinearLayout>